{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-beads"],
  "lsp": {
    "gopls": {
      "command": ["gopls", "-remote=auto"]
    }
  },
  "mcp": {
    "gremlin": {
      "type": "local",
      "command": ["gremlin-mcp"],
      "environment": {
        "GREMLIN_URL": "ws://localhost:8182/gremlin"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_KEY}"
      },
      "enabled": true
    }
  },
  "tools": {
    "skill": true
  }
}

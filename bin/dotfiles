#!/usr/bin/env bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

sub_help() {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   clean            Clean up caches (brew, asdf, gem)"
  echo "   dock             Apply macOS Dock settings"
  echo "   edit             Open dotfiles in IDE ($DOTFILES_IDE) and Git GUI ($DOTFILES_GIT_GUI)"
  echo "   help             This help message"
  echo "   macos            Apply macOS system defaults"
  echo "   update           Update packages and pkg managers (OS, brew, gem, asdf)"
}

sub_edit() {
  sh -c "$DOTFILES_IDE $DOTFILES_DIR"
  sh -c "$DOTFILES_GIT_GUI $DOTFILES_DIR"
}

sub_update() {
  sudo softwareupdate -i -a
  brew update
  brew upgrade
  gem update --system
  gem update
  asdf update
}

sub_clean() {
  brew cleanup
  brew cask cleanup
  gem cleanup
  asdf cleanup
}

sub_macos() {
  for DEFAULTS_FILE in "${DOTFILES_DIR}"/macos/defaults*.sh; do
    echo "Applying ${DEFAULTS_FILE}" && . "${DEFAULTS_FILE}"
  done
  echo "Done. Some changes may require a logout/restart to take effect."
}

sub_dock() {
  . "${DOTFILES_DIR}/macos/dock.sh" && echo "Dock reloaded."
}

# Make sure to keep this in sync with the available public commands

sub_completion() {
  echo "clean dock edit help macos update"
}

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac

#! /usr/bin/zsh

set -e

git fetch origin
REMOTE_BRANCH=$(git branch -r | fzf)
SPLITS=("${(@s|/|)REMOTE_BRANCH}")
BRANCH=$SPLITS[2]
echo $BRANCH
git switch $BRANCH
git heatmap
vared -p "Press (c) to continue reviewing: " -c tmp

echo "git stat"
git stat
vared -p "Press (c) to continue reviewing: " -c tmp

merge_commit=$(git merge-base HEAD origin/master)
git reset --soft $merge_commit
git reset  # to make everything unstaged
git review
git reset --hard origin/$BRANCH

#!/usr/bin/env bash

OPT_COLOR=""

while getopts ":c" OPT; do
	case "$OPT" in
		c) OPT_COLOR="--color";;
	esac
done

shift $((OPTIND-1))

if [ $# -ge 1 ]; then
	if [[ "$1" == http* ]]; then
	  INPUT=$(curl --silent "$1")
	elif [ -f "$1" ]; then
		INPUT=$(cat "$1")
	fi
else
  INPUT=$(cat -)
fi

echo "$INPUT" | underscore print "$OPT_COLOR"

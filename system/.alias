#!/bin/bash

# Shortcuts
alias reload="exec zsh"
alias g="git"
alias gg="git grep"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# exa
alias ls='exa --icons -x -a'
alias ll='ls -l'
alias lt='ls --tree'
alias lr='ls --recurse'

# For better autocomplete
eval $(thefuck --alias)

# Rails Aliases
alias be="bundle exec"
alias yolo="be rake db:drop;be rake db:create;"
alias cuke="be cucumber"
alias coverage="be rake ci:coverage"

# Personal Aliases
alias projects="cd /Users/johnmaguire/Projects"

# Fix grep to use color and show line numbers
#alias grep="grep -nr --color=auto"
#alias fgrep="fgrep --color=auto"
#alias egrep="egrep --color=auto"

# Map vim to use neovim
alias vim="nvim"

# use colorful tmux
alias vr="vim ~/.dotfiles/.config/nvim/init.vim"
alias zr="vim ~/.dotfiles/runcom/.zshrc"
alias tr="vim ~/.dotfiles/runcom/.tmux.conf"
alias ar="vim ~/.dotfiles/runcom/.alacritty.yml"
alias ir="vim ~/.dotfiles/.config/i3/config"

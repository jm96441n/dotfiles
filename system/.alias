#!/usr/bin/zsh

# Shortcuts
alias reload="exec zsh"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# eza
alias ls='eza --icons -x -a --group-directories-first'
alias ll='eza --icons -a -l'
alias lt='eza --tree'
alias ltl='eza --tree -L'
alias lr='eza --recurse'

# Rails Aliases
alias be="bundle exec"

# cht.sh
alias cht="tmux-cht"


# Fix grep to use color and show line numbers
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Map vim to use neovim
alias v="nvim"

# useful shortcuts for editing config files
alias zr="vim ~/.dotfiles/runcom/.zshrc"
alias txr="vim ~/.dotfiles/runcom/.tmux.conf"

# Named Directories
hash -d projects=$HOME/Projects
hash -d dot=$HOME/.dotfiles

alias projects=~projects
alias dot=~dot

# common typos
alias gaap="gapa"

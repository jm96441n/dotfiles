#!/usr/bin/zsh

# Shortcuts
alias reload="exec zsh"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# exa
alias ls='exa --icons -x -a'
alias ll='exa --icons -a -l'
alias lt='ls --tree'
alias ltl='ls --tree -L'
alias lr='ls --recurse'

# Rails Aliases
alias be="bundle exec"
alias yolo="be rake db:drop;be rake db:create;"


# Fix grep to use color and show line numbers
alias grep="grep -nr --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Map vim to use neovim
alias vim="nvim"

# useful shortcuts for editing config files
alias vr="vim ~/.dotfiles/.config/nvim/init.vim"
alias zr="vim ~/.dotfiles/runcom/.zshrc"
alias txr="vim ~/.dotfiles/runcom/.tmux.conf"
alias kr="vim ~/.dotfiles/.config/kitty/kitty.conf"
alias ir="vim ~/.dotfiles/.config/i3/config"


# Named Directories
hash -d gsu=$HOME/cbi/utils/go-service-utils
hash -d psu=$HOME/cbi/utils/python-service-utils
hash -d gt=$HOME/cbi/templates/go-service
hash -d pst=$HOME/cbi/templates/python-service
hash -d pjt=$HOME/cbi/templates/python-job
hash -d puts=$HOME/cbi/services/python-utils-test-service
hash -d cli=$HOME/cbi/cli/cbi

hash -d projects=$HOME/Projects
hash -d dot=$HOME/.dotfiles

alias gsu=~gsu
alias psu=~psu
alias gt=~gt
alias pst=~pst
alias pjt=~pjt
alias cli=~cli
alias puts=~puts

alias projects=~projects
alias dot=~dot

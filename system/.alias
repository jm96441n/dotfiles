#!/bin/bash

# Shortcuts
alias reload="source ~/.bash_profile"
alias g="git"
alias gg="git grep"
__git_complete g _git

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ls='ls -Gh' # Force ls to use colors (G) and use humanized file sizes (h)

# For better autocomplete
eval $(thefuck --alias)

# Rails Aliases
alias be="bundle exec"
alias yolo="be rake db:drop;be rake db:create;"
alias cuke="be cucumber"
alias coverage="be rake ci:coverage"

# Balance Aliases
alias cw="clockwork"
alias balance="cd /Users/jmaguire/balance"
alias nudge="GITHUB_AUTH_TOKEN='$GITHUB_AUTH_TOKEN' bundle exec rake ci:nudge_travis"
alias init="be rake ci:initialize"
alias sync_release="git branch -D merge_release ; git checkout release && git pull && git checkout develop && git pull && git checkout -b merge_release && git merge release"

# Personal Aliases
alias projects="cd /Users/johnmaguire/Projects"

# Fix grep to use color and show line numbers
alias grep="grep -nr --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# React on Rails Aliases
alias react_server="foreman start -f Procfile.dev"

# Map vim to use neovim
alias vim="nvim"

# make python3 the default
alias python="python3.8"

alias pip2="pip"
alias pip="pip3"
